{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@common": ["libs/common"],
      "@common/*": ["libs/common/*"],
      "@config": ["libs/config"],
      "@config/*": ["libs/config/*"],
      "@lib": ["libs/*"],
      "@lib/*": ["libs/*"]
    }
  }
}

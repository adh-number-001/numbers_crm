{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@common": ["src/common"],
      "@common/*": ["src/common/*"],
      "@config": ["src/config"],
      "@config/*": ["src/config/*"],
      "@lib": ["src/library/*"],
      "@lib/*": ["src/library/*"]
    }
  }
}
